<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.farazandishehafagh.filmlistwithkotlin">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:name="com.farazandishehafagh.filmlistwithkotlin.KotlinBaseApplication"
        android:icon="@mipmap/ic_launcher_film"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_film"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.splash.SplashActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeFullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.mainview.MainActivity">
        </activity>
    </application>

</manifest>